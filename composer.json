{
    "name": "jan_ivanov/employees",
    "type": "project",
    "autoload": {
        "psr-4": {
            "JanIvanov\\Employees\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jan Ivanov",
            "email": "telemaniaka@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "scripts": {
        "app": "php bin/cli.php",
        "test": "phpunit --no-coverage",
        "analize": "phpcs -p --standard=PSR12 src && phpstan analyse --level=max src",
        "start-dev": "php -S localhost:8081 -t ./public -c ./ops/php/php.ini"
    }
}
